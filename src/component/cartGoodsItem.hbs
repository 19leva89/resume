{{#each goodsBlock}}
<section class="row mt-3">
	<div class="col-12 card">
		<div class="card-body px-0 py-2">
			<div class="row">

				<div class="col-2">
					<img class="" src="{{image}}" alt="{{name}}">
				</div>

				<div class="col-4">
					<h4 class="card-title mt-3 ms-2">{{name}}</h4>
					<p class="mt-3 ms-2">{{description}}</p>
				</div>

				<div class="col-2">
					{{#with price}}
					<p class="mt-3">{{title}}</p>
					<h3 class="mt-3">{{value}}</h3>
					{{/with}}
				</div>

				<div class="col-2">
					<p class="mt-5">{{amount}}</p>
				</div>

				<div class="col-2">
					{{#each buttons}}
					<a href="#"
						class="mt-3 btn {{#if isPrimary}}btn-primary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}">{{text}}
					</a>
					{{/each}}
				</div>

			</div>
		</div>
	</div>
</section>
{{/each}}