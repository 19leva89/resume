<div>
	{{#with main}}
		<main class="p-5">
			<section>
				{{> title data="Work history" big=true}}
				<div>
					<ul>
						{{#each works}}
							<li>
								<div>{{position}}</div>

								<div class="mt-2">
									{{duration.from}} - 
										{{#if duration.to}}
											{{duration.to}}
										{{else}} 
											(досі працюємо) 
										{{/if}}
								</div>

								<div class="mt-2">
									{{#if company.url}}
										{{> link text=company.name href=company.url blankActive=true noLine=true}}
									{{else}} 
										<b>{{company.name}}</b>
									{{/if}}
								</div>

								<div class="mt-2">
									<strong>Projects ({{projectAmount}})</strong>
								</div>

								<ul class="mt-2">
									{{#each projects}}
										<li>
											<div>{{> link text=name href=url blankActive=true noLine=true}}</div>

											<div>
												<p>{{about}}</p>
											</div>

											<div>
												<em>Project stacks ({{stackAmount}})</em>
											</div>

											<div>
												{{#each stacks}}
													<ul>
														<li>{{name}}</li>
													</ul>
												{{/each}}
											</div>

											<div class="mt-2">
												<em>Project awards</em>
											</div>

											<div >
												{{#each awards}}
													<ul>
														<li>{{name}}</li>
													</ul>
												{{/each}}
											</div>
										</li>
									{{/each}}
								</ul>
							</li>
						{{/each}}
					</ul>
				</div>
			</section>
		</main>
	{{/with}}
</div>

